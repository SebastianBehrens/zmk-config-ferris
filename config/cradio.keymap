    macros {
        sql_comment: sql_comment {
            label = "sql_comment";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp K>
                , <&macro_tap &kp C>
                , <&macro_release &kp LCTRL>
                ;
        };
        sql_uncomment: sql_uncomment {
            label = "sql_uncomment";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp K>
                , <&macro_tap &kp U>
                , <&macro_release &kp LCTRL>
                ;
        };
        numpadcomma: numpadcomma {
            label = "numpadcomma";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp COMMA>
                , <&macro_tap &kp C>
                ;
        };
    };

// LAYER 0
